<div class="container clearfix">
  <div class="col-12">
    <form action="/blog/create" method="POST">
      <div class="col-9">
        <div class="col-12 panel">
          <h1>New Blog</h1>
          <div class="form-group">
            <input
              type="text"
              id="title"
              name="title"
              class="form-control 
            <%= typeof errors != 'undefined' && errors.title ? 'is-invalid' : ''
            %>"
              placeholder="Title"
              value="<%= typeof title != 'undefined' ? title : '' %>"
            />
            <div class="invalid-feedback">
              <%= typeof errors != 'undefined' && errors.title ? errors.title :
              '' %>
            </div>
          </div>

          <div class="slug-widget">
            <div class="url-wrapper">
              <i class="fa fa-link"></i>&nbsp;
              <span class="root-url"></span>
              <span class="subdirectory-url">/blog/</span>
              <input
                class="slug"
                id="slug"
                name="slug"
                value=""
                readonly
              />&nbsp;
              <input
                type="text"
                name="slug-edit"
                class="slug-edit-field"
                id="slug-edit-field"
              />
              <span>
                <span id="edit-slug" class="slug-btn">Edit</span>
                <span id="save-slug" class="slug-btn">Save</span>
                <span id="reset-slug" class="slug-btn">Reset</span>
              </span>
            </div>
          </div>

          <div class="form-group">
            <textarea
              id="description"
              name="description"
              class="form-control"
              rows="15"
            >
<%= typeof description != 'undefined' ? description : '' %></textarea
            >
          </div>
        </div>
      </div>

      <div class="col-3">
        <div class="col-12 blog-tools">
          <button type="submit" class="btn btn-primary btn-block">
            Publish
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
<script src="/js/unique-slug.js"></script>
