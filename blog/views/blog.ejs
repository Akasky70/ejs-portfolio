<div class="row mt-5">
  <div class="col-md-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-sign-in-alt"></i> New Blog
      </h1>

      <form action="/blog/create" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control 
            <%= typeof errors != 'undefined' && errors.title ? 'is-invalid' : ''
            %>"
            placeholder="Title"
            value="<%= typeof title != 'undefined' ? title : '' %>"
          />
          <div class="invalid-feedback">
            <%= typeof errors != 'undefined' && errors.title ? errors.title : ''
            %>
          </div>
        </div>
        <div class="form-group">
          <label for="slug">Slug</label>
          <input
            type="text"
            id="slug"
            name="slug"
            class="form-control <%= typeof errors != 'undefined' && errors.slug ? 'is-invalid' : ''
            %>"
            placeholder="Enter slug"
            value="<%= typeof slug != 'undefined' ? slug : '' %>"
          />
          <div class="invalid-feedback">
            <%= typeof errors != 'undefined' && errors.slug ? errors.slug : ''
            %>
          </div>
        </div>

        <div class="form-group">
          <label for="password">Blog</label>
          <textarea id="description" name="description" class="form-control">
<%= typeof description != 'undefined' ? description : '' %></textarea
          >
        </div>
        <button type="submit" class="btn btn-primary btn-block">Post</button>
      </form>
    </div>
  </div>
</div>
